<body>
    <!-- NAV BAR -->
    <%- include('./partials/nav-not-logged-in.ejs') %>

    <!-- VERIFICATION -->
    <div class="log-in">
        <div class="verification__box">
            <p class="verification__title">Email Sent</p>
            <p class="verification__msg">We sent an email to p*t*****a@gmail.com with a link to verify your account.</p>
            <a href="/verification" class="verification__resend--link">
                <button class="log-in__button verification__resend">Resend Verification Link</button>
            </a>
        </div>
        <a href="/log-in" class="log-in__register--text verification__back">Back to Login</a>
    </div>
    <script src="/script.js"></script>
</body>
